# Playwright Test Environment Configuration
# Copy this file to .env and update with your local values

# WordPress Installation URL
WORDPRESS_URL=http://localhost:8000

# Admin user credentials
ADMIN_USER=admin
ADMIN_PASS=password

# Test user credentials (for enrollment tests)
TEST_USER=testuser
TEST_PASS=testpass

# WooCommerce settings (if needed)
WC_API_KEY=
WC_API_SECRET=

# Test configuration
HEADLESS=true
SLOW_MO=100

# Browser selection (comma-separated)
# Options: chromium, firefox, webkit, mobile-chrome, mobile-safari
BROWSERS=chromium,firefox

# Test timeout in milliseconds
TEST_TIMEOUT=60000

# Screenshot on failure
SCREENSHOT_ON_FAILURE=true

# Video recording
RECORD_VIDEO=retain-on-failure