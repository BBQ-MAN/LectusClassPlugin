{
  "name": "lectus-class-system",
  "version": "1.2.0",
  "description": "WordPress LMS Plugin with Tailwind CSS",
  "scripts": {
    "dev": "npm run watch",
    "watch": "npm-run-all --parallel watch:*",
    "watch:css": "tailwindcss -i ./assets/css/src/main.css -o ./assets/css/frontend.css --watch",
    "watch:admin": "tailwindcss -i ./assets/css/src/admin.css -o ./assets/css/admin.css --watch",
    "build": "npm-run-all build:*",
    "build:css": "tailwindcss -i ./assets/css/src/main.css -o ./assets/css/frontend.css --minify",
    "build:admin": "tailwindcss -i ./assets/css/src/admin.css -o ./assets/css/admin.css --minify"
  },
  "devDependencies": {
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "autoprefixer": "^10.4.16",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0"
  },
  "keywords": [
    "wordpress",
    "lms",
    "education",
    "tailwindcss"
  ],
  "author": "Lectus Development Team",
  "license": "GPL-2.0+"
}